<config>
  <!-- Increase the amount of feathers and eggs you find in nests -->
  <set xpath="/lootcontainers/lootgroup[@name='groupBirdNest']/item[@name='resourceFeather']/@count">4,9</set>
  <set xpath="/lootcontainers/lootgroup[@name='groupBirdNest']/item[@name='foodEgg']/@prob">0.50</set>
  <setattribute xpath="/lootcontainers/lootgroup[@name='groupBirdNest']/item[@name='foodEgg']" name="count">2,4</setattribute>

  <!-- Add acid to cupboards -->
  <append xpath="/lootcontainers/lootgroup[@name='cupboard']">
    <item name="resourceAcid" count="1,2" prob="0.05" />
  </append>

  <!-- increase number of Eggs in refrigerators -->
  <set xpath="/lootcontainers/lootgroup[@name='coldfood']/item[@name='foodEgg']/@count">1,12</set>

  <!-- increase number of lockpicks found -->
  <set xpath="/lootcontainers/lootgroup/item[@name='resourceLockPick']/@count">2,8</set>
</config>